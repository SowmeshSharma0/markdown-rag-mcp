{
  "name": "com.sixt.mcp.markdown-rag",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsup",
    "start": "node dist/index.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:qdrant": "docker-compose logs -f qdrant",
    "docker:logs:ollama": "docker-compose logs -f ollama",
    "docker:restart": "docker-compose restart",
    "docker:setup-model": "docker exec markdown-rag-ollama sh -c 'ollama pull nomic-embed-text && ollama run nomic-embed-text'",
    "docker:list-models": "docker exec markdown-rag-ollama ollama list",
    "docker:clean": "docker-compose down && rm -rf qdrant_data ollama_data",
    "docker:reset": "pnpm run docker:clean && pnpm run docker:up",
    "ingest": "node dist/ingest.js",
    "dev": "pnpm run build && pnpm start",
    "docker:check-qdrant": "curl http://localhost:6333/collections",
    "docker:check-ollama": "curl http://localhost:11434/api/tags"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.18.3",
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.9.2",
    "@types/uuid": "^11.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@qdrant/js-client-rest": "^1.15.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "ollama": "^0.6.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  }
}
